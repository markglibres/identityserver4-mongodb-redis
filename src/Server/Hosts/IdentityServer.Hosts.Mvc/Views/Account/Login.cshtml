@using Microsoft.AspNetCore.Mvc.Routing
@using System.Text.Encodings.Web
@using System.Web
@model LoginModel
<div class="login-page">
    <div class="lead">
        <h1>Login</h1>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div>
                            <span asp-validation-for="Validations" class="text-danger"></span>
                        </div>
                        <button class="btn btn-primary" name="button" value="login">Login</button>
                        <input type="button" class="btn btn-secondary" onclick="window.history.back();" value="Cancel" />
                        <a href="/registration/register?ReturnUrl=@(HttpUtility.UrlEncode(Model.ReturnUrl))">Register</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
