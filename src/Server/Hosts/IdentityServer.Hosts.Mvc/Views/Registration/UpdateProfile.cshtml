@model UpdateProfileModel

<div>
    <h1>Complete Profile</h1>
    <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-route="UpdateProfile">
                            <input type="hidden" asp-for="Token" />
                            <div class="form-group">
                                <label asp-for="Firstname"></label>
                                <input class="form-control" placeholder="Firstname" asp-for="Firstname" autofocus>
                                <label asp-for="Lastname"></label>
                                <input class="form-control" placeholder="Lastname" asp-for="Lastname" autofocus>
                            </div>
                            <button class="btn btn-primary" name="button" value="login">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
