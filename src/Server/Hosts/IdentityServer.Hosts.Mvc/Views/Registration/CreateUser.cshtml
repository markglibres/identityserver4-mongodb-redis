@using System.Web
@model CreateUserModel

<div>
    <h1>Create User</h1>
    <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Registration" asp-action="CreateUser">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                            </div>
                            <span asp-validation-for="Validations" class="text-danger"></span>
                            <button class="btn btn-primary" name="button" value="login">Register</button>
                            <input type="button" class="btn btn-secondary" onclick="window.history.back();" value="Cancel" />
                            <a href="/registration/forgotpassword?ReturnUrl=@(HttpUtility.UrlEncode(Model.ReturnUrl))">Forgot Password</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
