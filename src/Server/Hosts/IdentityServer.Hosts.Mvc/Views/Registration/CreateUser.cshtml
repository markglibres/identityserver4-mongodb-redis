@model CreateUserRequest

<div>
    <h1>Create User</h1>
    <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Registration" asp-action="CreateUser">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                <label asp-for="Password"></label>
                                <input class="form-control" placeholder="Password" asp-for="Password" autofocus>
                                <label asp-for="ConfirmPassword"></label>
                                <input class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autofocus>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                <span asp-validation-for="Validations" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary" name="button" value="login">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
