@model UpdatePasswordModel

<div>
    <h1>Complete Profile</h1>
    <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Registration" asp-action="UpdatePassword">
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="ResetPasswordToken" />
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input class="form-control" placeholder="Password" asp-for="Password" autofocus>
                                <label asp-for="ConfirmPassword"></label>
                                <input class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autofocus>
                                <label asp-for="Firstname"></label>
                                <input class="form-control" placeholder="Firstname (optional)" asp-for="Firstname" autofocus>
                                <label asp-for="Lastname"></label>
                                <input class="form-control" placeholder="Lastname (optional)" asp-for="Lastname" autofocus>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button class="btn btn-primary" name="button" value="login">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
